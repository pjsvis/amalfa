{
	"name": "amalfa",
	"version": "1.0.0",
	"description": "A Memory Layer For Agents - MCP server for knowledge graphs",
	"license": "MIT",
	"author": "Peter John Smith <729613+pjsvis@users.noreply.github.com>",
	"repository": {
		"type": "git",
		"url": "https://github.com/pjsvis/amalfa"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"knowledge-graph",
		"ai-agents",
		"vector-search",
		"sqlite",
		"embeddings"
	],
	"bin": {
		"amalfa": "./src/cli.ts"
	},
	"engines": {
		"bun": "1.3.x",
		"node": "22.x"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bun": "1.3.4",
		"only-allow": "^1.2.2",
		"pino-pretty": "^13.1.3"
	},
	"scripts": {
		"preinstall": "npx only-allow bun",
		"precommit": "bun run scripts/maintenance/pre-commit.ts",
		"serve": "bun run src/mcp/index.ts serve",
		"start": "bun run src/mcp/index.ts start",
		"stop": "bun run src/mcp/index.ts stop",
		"status": "bun run src/mcp/index.ts status",
		"check": "biome check .",
		"format": "biome format --write ."
	},
	"peerDependencies": {
		"typescript": "5.9.3"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "1.25.0",
		"fastembed": "2.0.0",
		"pino": "^10.1.0"
	}
}
