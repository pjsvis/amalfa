{
	"name": "polyvis",
	"private": true,
	"version": "0.1.0",
	"license": "MIT",
	"npm.exclude": [
		"**/node_modules/**",
		"experiments/**"
	],
	"npm.autoDetect": "on",
	"engines": {
		"bun": "1.3.x",
		"node": "22.x"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@tailwindcss/cli": "4.1.18",
		"@tailwindcss/postcss": "4.1.18",
		"@types/bun": "1.3.4",
		"only-allow": "^1.2.2",
		"open-props": "1.7.16",
		"pino-pretty": "^13.1.3",
		"tailwindcss": "4.1.18"
	},
	"scripts": {
		"preinstall": "npx only-allow bun",
		"precommit": "bun run scripts/maintenance/pre-commit.ts",
		"map-briefs": "bun run scripts/cli/map-briefs.ts",
		"dev": "bun run scripts/cli/dev.ts",
		"build:css": "tailwindcss -i ./src/css/main.css -o ./public/css/app.css",
		"watch:css": "tailwindcss -i ./src/css/main.css -o ./public/css/app.css --watch",
		"build:js": "bun build ./src/js/app.js ./src/js/utils/theme.js --outdir ./public/js",
		"watch:js": "bun build ./src/js/app.js ./src/js/utils/theme.js --outdir ./public/js --watch",
		"build:data": "bun run src/resonance/cli/ingest.ts",
		"daemon": "bun run src/resonance/daemon.ts",
		"mcp": "bun run src/mcp/index.ts",
		"test:integration": "bun run tests/integration/lifecycle.test.ts",
		"check": "biome check .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"update-review-branch": "sh scripts/maintenance/update_review_branch.sh",
		"start:triad": "python3 experiments/enlightenment/src/orchestrator.py",
		"olmo3": "bun run src/services/olmo3.ts",
		"phi": "bun run src/services/phi.ts",
		"llama": "bun run src/services/llama.ts",
		"llamauv": "bun run src/services/llamauv.ts",
		"reactor": "bun run experiments/data-star-dashboard/reactor.ts",
		"servers": "bun run scripts/cli/servers.ts",
		"inspect-db": "bun run scripts/inspect-db.ts"
	},
	"peerDependencies": {
		"typescript": "5.9.3"
	},
	"dependencies": {
		"@mistralai/mistralai": "1.10.0",
		"@modelcontextprotocol/sdk": "1.25.0",
		"@starfederation/datastar": "^1.0.0-beta.11",
		"alpinejs": "3.15.2",
		"basecoat-css": "^0.3.7",
		"compromise": "14.14.4",
		"drizzle-kit": "0.31.8",
		"drizzle-orm": "0.45.0",
		"fastembed": "2.0.0",
		"glob": "13.0.0",
		"graphology-metrics": "2.4.0",
		"marked": "17.0.1",
		"mdast-util-to-string": "4.0.0",
		"openai": "6.10.0",
		"pino": "^10.1.0",
		"remark-cli": "12.0.1",
		"remark-gfm": "4.0.1",
		"remark-parse": "11.0.0",
		"remark-stringify": "11.0.0",
		"unified": "11.0.5"
	}
}
